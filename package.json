{
  "name": "ns-xm",
  "version": "0.1.1",
  "description": "Remote server development.",
  "author": "oranjtesla",
  "license": "MIT",
  "main": "app.ts",
  "_moduleAliases": {
    "$ti": "src/ti",
    "$models": "src/models",
    "$schema": "src/models/schema",
    "$errata": "src/errata",
    "$ctx": "src/context",
    "$gql": "src/gql",
    "@ns-fp": "/ns/500/ns-lib/ns-fp/src"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "scripts": {
    "clean": "rm -r node-modules/; rm -r dist/",
    "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/app.js\"",
    "dev": "ts-node-dev --respawn --transpile-only --rs src/app.ts",
    "build": "tsc --build",
    "test": "ts-node-dev --respawn --transpile-only tests/index.t.ts"
  },
  "devDependencies": {
    "@mikro-orm/migrations": "5.1.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.22",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@mikro-orm/cli": "5.1.1",
    "@mikro-orm/core": "5.1.1",
    "@mikro-orm/postgresql": "5.1.1",
    "@types/custom-error-generator": "^7.0.30",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express-graphql": "^0.12.0",
    "graphql-playground-middleware-express": "^1.7.23",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "ts-custom-error": "^3.2.0"
  }
}
