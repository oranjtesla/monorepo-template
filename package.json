{
  "name": "monorepo-template",
  "version": "0.0.1",
  "description": "Basic monorepo template using Node workspaces and Typescript.",
  "author": "oranjtesla",
  "license": "MIT",
  "private": true,
  "_moduleAliases": {
  },
  "workspaces": {
    "packages": ["apps/*"]
  },
  "scripts": {
    "compile": "tsc --build --verbose",
    "compile:build": "tsc --build --verbose",
    "compile:dev": "tsc --build --incremental --verbose --watch",
    "dev": "(npm run dev:test);",
    "dev:test": "npm run --prefix apps/test dev",
    "predev": "systemctl start redis-server",
    "gen:test": "(npm run --prefix apps/test gen)",
    "genw:test": "graphql-codegen --config ./apps/test/codegen.config.yml --watch",
    "denode": "rm -r node_modules/; rm package-lock.json",
    "clean": "rm -r dist/; rm -r lib/; rm -r node_modules/",
    "pkg": "bin/pkg",
    "pkg:ping": "bin/pkg ping",
    "pkg:version": "bin/pkg version",
    "setup": "bin/setup",
    "schema:drop": "cd apps/xm && npx mikro-orm schema:drop",
    "migrate": "cd apps/xm && npx mikro-orm migration:create",
    "migrate:up": "cd apps/xm && npx mikro-orm migration:up",
    "migrate:down": "cd apps/xm && npx mikro-orm migration:down"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/graphql-modules-preset": "^2.3.11",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/time": "^3.1.1",
    "@graphql-codegen/typescript": "^2.4.11",
    "@graphql-codegen/typescript-operations": "^2.4.0",
    "@graphql-codegen/typescript-resolvers": "^2.6.4",
    "@graphql-codegen/typescript-urql": "^3.5.10",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/custom-error-generator": "^7.0.30",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "concurrently": "^7.2.0",
    "cross-env": "^7.0.3",
    "dotenv-safe": "^8.2.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "gen-env-types": "^1.3.4",
    "module-alias": "^2.2.2",
    "prettier": "^2.6.2",
    "ts-custom-error": "^3.2.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "graphql": "^15.8.0"
  }
}
