{
  "extends": ["eslint:recommended"],
  "rules": {
    "no-empty-pattern": "warn",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    // allows redeclaration for function overloads and other Typescript features.
    "no-redeclare": "off",
    "@typescript-eslint/no-redeclare": ["error"],
    "no-undef": "warn",
    "@typescript-eslint/no-empty-interface": "off"
  }
}
